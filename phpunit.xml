<?xml version="1.0" encoding="UTF-8"?>
<phpunit 
		backupGlobals="false"
        backupStaticAttributes="false"
        bootstrap="vendor/autoload.php"
        colors="true"
        convertErrorsToExceptions="true"
        convertNoticesToExceptions="true"
        convertWarningsToExceptions="true"
        processIsolation="false"
        stopOnFailure="false"
        syntaxCheck="false">
    <testsuites>
        <testsuite name="Kata">
            <directory>./tests/</directory>
        </testsuite>
        <testsuite name="GameOfLife">
            <directory>./tests/GameOfLife/</directory>
        </testsuite>
        <testsuite name="MathsGame">
            <directory>./tests/MathsGame/</directory>
        </testsuite>
        <testsuite name="Potter">
            <directory>./tests/Potter/</directory>
        </testsuite>
        <testsuite name="TennisGame">
            <directory>./tests/TennisGame/</directory>
        </testsuite>
        <testsuite name="TradingCardGame">
            <directory>./tests/TradingCardGame/</directory>
        </testsuite>
    </testsuites>
</phpunit>